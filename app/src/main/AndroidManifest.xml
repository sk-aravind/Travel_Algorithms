<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.skara.triggered.travelapp_triggered">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomeScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ItineraryMain"
            android:label="@string/title_activity_itinerary_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".TravelRouteFragment"></activity>
        <activity
            android:name=".Route_options"
            android:label="@string/title_activity_route_options"
            android:parentActivityName=".HomeScreen"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Dest_details"
            android:label="@string/title_activity_dest_details"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>